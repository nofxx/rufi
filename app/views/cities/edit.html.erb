<h1>Editando <%= @city.name %></h1>

<% form_for(@city) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :nome %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :cep %><br />
    <%= f.text_field :code %>
  </p>
  <p>
    <%= f.submit "Atualizar" %>
  </p>
<% end %>

<%= link_to 'Ver', @city %> |
<%= link_to 'Voltar', cities_path %>
