<h1>Editing logfile</h1>

<% form_for(@logfile) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :type %><br />
    <%= f.text_field :type %>
  </p>
  <p>
    <%= f.label :state %><br />
    <%= f.text_field :state %>
  </p>
  <p>
    <%= f.label :source_content_type %><br />
    <%= f.text_field :source_content_type %>
  </p>
  <p>
    <%= f.label :source_file_name %><br />
    <%= f.text_field :source_file_name %>
  </p>
  <p>
    <%= f.label :source_file_size %><br />
    <%= f.text_field :source_file_size %>
  </p>
  <p>
    <%= f.label :note %><br />
    <%= f.text_area :note %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @logfile %> |
<%= link_to 'Back', logfiles_path %>
