$(document).ready(function(){
	<% 
		flexigrid('/aps',  :sortname => 'id') do |c,s,b|
		
			c << {:display => 'Id', :name => 'id', :width => 50} 
			c << {:display => 'Essid', :name => 'essid', :width => 150} 
			c << {:display => 'MAC', :name => 'mac', :width => 100}
			c << {:display => 'Enc', :name => 'enc', :width => 100}
			c << {:display => 'Key', :name => 'key', :width => 100}
			c << {:display => 'IP', :name => 'ip', :width => 100}									
			
			s << {:display => 'Mac', :name => 'mac'}
			s << {:display => 'IP', :name => 'ip'}
			
			b << {:name => 'Adicionar', :bclass => 'add'}
			b << {:separator => true}
			b << {:name => 'Editar', :bclass => 'edit'}
			b << {:separator => true}
			b << {:name => 'Apagar', :bclass => 'destroy'}
			
		end 
	%>
	
	<%= flexigrid_button_click '.add', new_ap_path %>
	<%= flexigrid_button_click '.edit', '/aps/edit', :include_id => true %>
	<%= flexigrid_button_click '.destroy', '/aps/destroy', :include_id => true, :confirm => 'Tem certeza?' %>
		
});
