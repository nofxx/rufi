$(document).ready(function(){
	<% 
		flexigrid('/clients', :sortname => 'id') do |c,s,b|
					
			c << {:display => 'Id', :name => 'id', :width => 50} 
			c << {:display => 'Essid', :name => 'ip', :width => 50} 
			c << {:display => 'MAC', :name => 'mac', :width => 100}      
			c << {:display => 'IP', :name => 'ip', :width => 100}
						
			s << {:display => 'Essid', :name => 'ip'}
			s << {:display => 'Mac', :name => 'mac'}		
			
			b << {:name => 'Adicionar', :bclass => 'add'}
			b << {:separator => true}
			b << {:name => 'Editar', :bclass => 'edit'}
			b << {:separator => true}
			b << {:name => 'Apagar', :bclass => 'destroy'}
						
		end 
		
	%>
	
	<%= flexigrid_button_click '.add', new_client_path %>
	<%= flexigrid_button_click '.edit', '/clients/edit', :include_id => true %>
	<%= flexigrid_button_click '.destroy', '/clients/destroy', :include_id => true, :confirm => 'Tem certeza?' %>
});
